<h1>Listing boxes</h1>

<table>
  <tr>
    <th>Owner</th>
    <th>Name</th>
    <th>Picture</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @boxes.each do |box| %>
  <tr>
    <td><%= box.owner_id %></td>
    <td><%= box.name %></td>
    <td><%= box.picture %></td>
    <td><%= box.description %></td>
    <td><%= link_to 'Show', box %></td>
    <td><%= link_to 'Edit', edit_box_path(box) %></td>
    <td><%= link_to 'Destroy', box, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

